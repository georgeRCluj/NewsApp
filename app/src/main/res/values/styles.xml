<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/editTextMargin</item>
        <item name="android:maxLength">@integer/bookLength</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/editTextMargin</item>
        <item name="android:layout_marginTop">@dimen/editTextMargin</item>
    </style>

    <style name="ListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/editTextMargin</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/listItemMargin</item>
        <item name="android:layout_marginRight">@dimen/listItemMargin</item>
        <item name="android:layout_marginBottom">@dimen/listItemMargin</item>
    </style>

</resources>
